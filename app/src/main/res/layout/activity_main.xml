<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/timeofday"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Enter the time of day"
        android:inputType="text"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/suggestMealbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:insetLeft="55dp"
        android:insetRight="55dp"
        android:text="Suggest a meal" />

    <TextView
        android:id="@+id/mealsuggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meal Suggestion"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="230dp" />

    <Button
        android:id="@+id/exitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="316dp" />


</LinearLayout>